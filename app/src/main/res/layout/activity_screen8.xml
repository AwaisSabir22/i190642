<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen8">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:orientation="vertical"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sidebar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-35dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:src="@drawable/threebar"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageView>

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="220dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:src="@drawable/account_icon"
                    tools:ignore="SpeakableTextPresentCheck"></ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Playlists"
                    android:textSize="40dp"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp"
                    ></TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                ></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/pl1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/film"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/pl2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/film"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/pl3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/film"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Playlist 1"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Playlist 2"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Playlist 3"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>



                </RelativeLayout>





            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Artists"
                    android:textColor="@color/white"
                    android:textSize="40dp"

                    ></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                ></LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/artist1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/despacito"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/artist2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/despacito"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".25">

                    <ImageView
                        android:id="@+id/artist3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:src="@drawable/despacito"
                        tools:ignore="SpeakableTextPresentCheck">


                    </ImageView>



                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Artist 1"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Artist 2"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_weight=".25"
                    android:layout_marginLeft="25dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Artist 3"
                        android:textColor="#ECC727"
                        android:textSize="20dp">


                    </TextView>






                </RelativeLayout>





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Song Name"
                        android:textColor="#ECC727"
                        android:textSize="25dp">

                    </TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    android:layout_marginLeft="20dp"
                    >

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:src="@drawable/prev"

                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/play"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:clickable="true"
                        android:src="@drawable/play"

                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageView>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/forward"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:src="@drawable/forward_arrow"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"></ImageView>


                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#1A1A1B"
                android:orientation="horizontal"

                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="5dp"
                        android:src="@drawable/heart"
                        tools:ignore="SpeakableTextPresentCheck"></ImageView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="5dp"
                        android:src="@drawable/plus"

                        tools:ignore="SpeakableTextPresentCheck"></ImageView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="5dp"
                        android:src="@drawable/search"
                        tools:ignore="SpeakableTextPresentCheck"></ImageView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <ImageView
                        android:id="@+id/later"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:padding="5dp"
                        android:src="@drawable/listen_later"
                        tools:ignore="SpeakableTextPresentCheck"></ImageView>


                </RelativeLayout>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#1A1A1B"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="Liked"
                        android:textColor="@color/white"
                        android:textSize="18dp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="30dp"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="18dp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="25dp"
                        android:text="Search"
                        android:textColor="@color/white"
                        android:textSize="18dp"></TextView>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".25"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:text="Listen Later"
                        android:textColor="@color/white"
                        android:textSize="18dp"></TextView>


                </RelativeLayout>







            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="#3a231c"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/circle"
                    android:layout_marginTop="20dp"
                    >


                </ImageView>
                ></LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="User Name"
                android:textColor="#ECC727"
                android:layout_marginLeft="130dp"
                android:textSize="20dp">


            </TextView>

            <TextView
                android:id="@+id/editprof"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Edit profile"
                android:textColor="#ECC727"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:clickable="true">


            </TextView>

            <TextView
                android:id="@+id/editpass"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Change Password"
                android:textColor="#ECC727"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:clickable="true">


            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                >


                <TextView
                    android:id="@+id/exittext"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="Logout"
                    android:textColor="#ECC727"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="200dp"
                    android:textSize="20dp"
                    android:clickable="true">


                </TextView>

                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:src="@drawable/exit"
                    android:layout_marginTop="200dp"
                    android:clickable="true"
                    >

                </ImageView>




            </LinearLayout>




        </LinearLayout>



    </androidx.drawerlayout.widget.DrawerLayout>




</RelativeLayout>