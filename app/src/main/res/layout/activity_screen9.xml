<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen9"
    android:background="@color/black"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/arrow"
            android:layout_marginTop="15dp"
            android:clickable="true"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Add Playlist"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            ></TextView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        >
        <ImageView
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/upload"
            android:layout_marginTop="20dp"
            android:clickable="true"
            ></ImageView>



    </LinearLayout>

    <EditText
        android:id="@+id/et1"
        android:background="@drawable/et_style"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Playlist Name"

        android:padding="10dp"
        android:textColorHint="#ECC727"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">



    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

    </LinearLayout>

    <EditText
        android:id="@+id/et2"
        android:background="@drawable/et_style"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Description"

        android:padding="10dp"
        android:textColorHint="#ECC727"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">



    </EditText>




        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/add_play"
            android:layout_marginLeft="300dp"


            ></ImageView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1A1A1B"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/heart"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/add"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/plus"

                ></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/search"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/search"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/later"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@drawable/listen_later"></ImageView>


        </RelativeLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#1A1A1B"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>







    </LinearLayout>


</LinearLayout>