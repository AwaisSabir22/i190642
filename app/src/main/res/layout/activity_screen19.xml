<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen18"
    android:background="@color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="20dp"
                android:src="@drawable/arrow"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:layout_marginLeft="50dp"></TextView>


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="2 options / Right Selected"
        android:textColor="#535350"
        android:textSize="20dp"

        android:layout_marginTop="20dp"
        ></TextView>

    <ImageView
        android:id="@+id/smusic"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/selectbar"
        android:clickable="true"
        ></ImageView>

    <LinearLayout
        android:id="@+id/rslt1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/despacito">


            </ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Song Name"
                android:textColor="@color/white"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Artist"
                android:textColor="#ECC727"
                android:textSize="25dp"
                android:layout_marginTop="60dp"
                ></TextView>



        </RelativeLayout>

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="3:01"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            ></TextView>

        <ImageView
            android:id="@+id/setting1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/dots"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            ></ImageView>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/rslt2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:clickable="true"
        >
        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/despacito">


            </ImageView>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="Song Name"
                android:textColor="@color/white"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Artist"
                android:textColor="#ECC727"
                android:textSize="25dp"
                android:layout_marginTop="60dp"
                ></TextView>



        </RelativeLayout>

        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="0:24"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            ></TextView>

        <ImageView
            android:id="@+id/setting"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/dots"
            android:clickable="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            ></ImageView>





    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        >


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1A1A1B"
        android:orientation="horizontal"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/heart"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/plus"

                tools:ignore="SpeakableTextPresentCheck"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@color/black"
            >

            <ImageView
                android:id="@+id/search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/search"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <ImageView
                android:id="@+id/later"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:padding="5dp"
                android:src="@drawable/listen_later"
                tools:ignore="SpeakableTextPresentCheck"></ImageView>


        </RelativeLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#1A1A1B"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Liked"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:text="Add"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:background="@color/black"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:text="Search"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="18dp"></TextView>


        </RelativeLayout>







    </LinearLayout>







</LinearLayout>